# Production Environment Variables
# Скопируйте этот файл в .env.prod и заполните реальными значениями
# Использование: docker-compose -f docker-compose.prod.yml --env-file .env.prod up -d

# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# PostgreSQL Configuration (используйте управляемую БД или собственный сервер)
SPRING_DATASOURCE_URL=jdbc:postgresql://your-db-host:5432/ihome24
SPRING_DATASOURCE_USERNAME=iHome24db
SPRING_DATASOURCE_PASSWORD=iHome242025db

# MinIO / S3 Configuration
# Для AWS S3:
MINIO_ENDPOINT=https://s3.amazonaws.com
MINIO_ACCESS_KEY=YOUR_AWS_ACCESS_KEY
MINIO_SECRET_KEY=YOUR_AWS_SECRET_KEY
MINIO_BUCKET_NAME=ihome24-media-prod

# Или для собственного MinIO:
# MINIO_ENDPOINT=https://minio.yourdomain.com
# MINIO_ACCESS_KEY=iHome24mino
# MINIO_SECRET_KEY=iHome242025mino
# MINIO_BUCKET_NAME=ihome24-media

# Backend Configuration
BACKEND_PORT=8080
SHOW_SQL=false

# Admin Configuration
ADMIN_USERNAME=iHome24admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=iHome242025admin
ADMIN_FULL_NAME=Администратор

# Frontend URLs (должны быть HTTPS в продакшене!)
ADMIN_API_BASE_URL=https://api.yourdomain.com/api
FRONTEND_API_BASE_URL=https://api.yourdomain.com/api

# CORS Configuration (ВАЖНО: используйте HTTPS и ваш домен!)
# Для варианта с поддоменами:
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://admin.yourdomain.com
# Для варианта с одним доменом:
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Ports
ADMIN_PORT=5173
FRONTEND_PORT=3000

# Liquibase (для миграций БД)
LIQUIBASE_ENABLED=true

# MinIO settings
MINIO_INITIALIZE_ON_STARTUP=false
MINIO_MAX_IMAGE_SIZE=5242880
MINIO_MAX_VIDEO_SIZE=104857600

# Email Configuration (Яндекс SMTP)
MAIL_HOST=smtp.yandex.ru
MAIL_PORT=465
MAIL_USERNAME=your_email@yandex.ru
MAIL_PASSWORD=your_app_password_here
MAIL_SMTP_SSL_ENABLE=true
MAIL_SMTP_STARTTLS_ENABLE=false
APP_EMAIL_FROM=your_email@yandex.ru
